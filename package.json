{
  "name": "dorganize",
  "version": "0.5.0",
  "description": "A Windows-only window organizer for Dofus with keyboard shortcuts, window management, and navigation dock - Major performance and code quality improvements",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder --win",
    "build-win": "electron-builder --win",
    "test": "jest",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix"
  },
  "keywords": [
    "dofus",
    "organizer",
    "window-manager",
    "gaming",
    "multiboxing",
    "electron",
    "windows",
    "auto-configuration",
    "initiative-sorting",
    "keyboard-shortcuts"
  ],
  "author": {
    "name": "Dorganize Team",
    "email": "support@dorganize.com"
  },
  "license": "MIT",
  "homepage": "https://github.com/kihw/dorganize",
  "repository": {
    "type": "git",
    "url": "https://github.com/kihw/dorganize.git"
  },
  "bugs": {
    "url": "https://github.com/kihw/dorganize/issues"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.2",
    "rimraf": "^3.0.2"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "i18next": "^23.7.6"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "build": {
    "appId": "com.dorganize.app",
    "productName": "Dorganize",
    "copyright": "Copyright Â© 2024 Dorganize Team",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "locales/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "assets/",
        "to": "assets/",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "src/script/",
        "to": "script/",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icons/dorganize.ico",
      "requestedExecutionLevel": "asInvoker",
      "artifactName": "${productName}-${version}-${arch}-windows.${ext}",
      "publisherName": "Dorganize Team"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "runAfterFinish": false,
      "installerIcon": "assets/icons/dorganize.ico",
      "uninstallerIcon": "assets/icons/dorganize.ico",
      "license": "LICENSE",
      "warningsAsErrors": false,
      "displayLanguageSelector": true,
      "installerLanguages": [
        "en_US",
        "fr_FR",
        "de_DE",
        "es_ES",
        "it_IT"
      ]
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.${ext}"
    }
  }
}